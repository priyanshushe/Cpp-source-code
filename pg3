
#include <stdio.h>
#include<time.h>	// for time()
#include<stdlib.h>	// for rand()

int main()
{
static int MAX=50000; 
clock_t start,end; int a[MAX],n,i=0;
printf("\n Enter the number of elements \n"); scanf("%d", &n);
printf("\n Enter the array :\n");
for(i=0;i<n;i++)
a[i]=rand()%1000; // storing a random number between 0 and 1000
printf("\n The array is :\n"); for(i=0;i<n;i++) printf("%d\n", a[i]); start=clock(); selectionSort(a, n); end=clock();
printf("\n The sorted array is :\n"); for(i=0;i<n;i++)
printf("%d\n", a[i]);
printf("\n Time taken is :%f", (end-start)/(double)CLOCKS_PER_SEC);
return 0;
}


selectionSort(int a[], int n)
{
for (int i = 0; i < n-1; i++)
{
// min is the index of the smallest element with an index greater or equal to i 
int swap, min = i;
for (int j = i + 1; j < n; j++)
{
if (a[j] < a[min])
{
min = j;
}
		}


if ( min != i )
{
swap =a[i]; 
a[i] = a[min]; 
a[min]= swap;
}

}
}